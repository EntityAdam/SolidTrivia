@page "/board/list"
@inject NavigationManager NavigationManager
@inject BoardListViewModel viewModel

<h1>Boards</h1>
<button class="btn btn-primary" @onclick="NavigateToCreate">Create New</button>
<hr />
<h3>Boards List</h3>
<div style="cursor: pointer; margin: 5px 0 10px 0; font-size: 1.2rem" @onclick="Refresh"><span style="color: blue">Refresh</span> <i class="oi oi-reload" aria-hidden="true"></i></div>

@if (ViewModel == null || ViewModel.Boards == null)
{
    <span>Loading...</span>
}
else if (!ViewModel.Boards.Any())
{
    <span>Nothing to see here..</span>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var board in ViewModel.Boards)
            {
                <tr>
                    <td>@board.Id</td>
                    <td>@board.Name</td>
                    <td>
                        <button class="btn btn-info" @onclick="(() => Edit(board.Id))">Edit</button> |
                        <button class="btn btn-danger" @onclick="(() => Delete(board.Id))">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    protected BoardListViewModel ViewModel { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();
        ViewModel = viewModel;
        ViewModel.Load();
    }

    protected void Refresh()
    {
        ViewModel.UpdateCommand.Execute(null);
    }

    protected void NavigateToCreate() => NavigationManager.NavigateTo($"board/create");

    protected void Delete(int boardId) => NavigationManager.NavigateTo($"board/delete/{boardId}");

    protected void Edit(int boardId) => NavigationManager.NavigateTo($"board/edit/{boardId}");
}