@using Markdig

@if (Content == null)
{
    <span>Loading...</span>
}
else
{
    @(((MarkupString)Content))
}

@code {
    [Parameter] public string Content { get; set; }

    private string BuildHtmlFromMarkdown(string value) => Markdig.Markdown.ToHtml(
        markdown: value,
        pipeline: new MarkdownPipelineBuilder().UseAdvancedExtensions().Build()
    );
}