@page "/category/list"
@inject NavigationManager NavigationManager
@inject CategoryListViewModel viewModel

<h1>Categories</h1>
<button class="btn btn-primary" @onclick="NavigateToCreate">Create New</button>
<hr />
<h3>Category List</h3>
<div style="cursor: pointer; margin: 5px 0 10px 0; font-size: 1.2rem" @onclick="Refresh"><span style="color: blue">Refresh</span> <i class="oi oi-reload" aria-hidden="true"></i></div>

@if (ViewModel == null || ViewModel.Categories == null)
{
    <span>Loading...</span>
}
else if (!ViewModel.Categories.Any())
{
    <span>Nothing to see here..</span>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in ViewModel.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <button class="btn btn-info" @onclick="(() => Edit(category.Id))">Edit</button> |
                        <button class="btn btn-danger" @onclick="(() => Delete(category.Id))">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    protected CategoryListViewModel ViewModel { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();
        ViewModel = viewModel;
        ViewModel.Load();
    }

    protected void Refresh()
    {
        ViewModel.UpdateCommand.Execute(null);
    }

    protected void NavigateToCreate() => NavigationManager.NavigateTo($"category/create");

    protected void Delete(int tagId) => NavigationManager.NavigateTo($"category/delete/{tagId}");

    protected void Edit(int tagId) => NavigationManager.NavigateTo($"category/edit/{tagId}");
}